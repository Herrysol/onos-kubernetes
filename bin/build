#!/bin/bash

build_atomix() {
  version=$1
  docker build -t atomix/atomix-kubernetes:$version docker/atomix --build-arg ATOMIX_VERSION=$version
}

build_onos() {
  version=$1
  docker build -t onos/onos-kubernetes:1.14.0 docker/onos
}

build_proxy() {
  version=$1
  docker build -t onos/onos-proxy-kubernetes:1.14.0 docker/onos-proxy
}

image=$1
version=$2

case "$image" in
    atomix)
        build_atomix $version
        ;;
    onos)
        build_onos $version
        ;;
    proxy)
        build_proxy $version
        ;;
esac
